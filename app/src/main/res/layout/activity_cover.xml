<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title kecil -->
        <TextView
            android:id="@+id/tvLoginSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login/Registrasi"
            android:textColor="#9C1C4D"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Banner Teks -->

        <!-- Deskripsi -->

        <ImageView
            android:id="@+id/img_banner"
            android:layout_width="332dp"
            android:layout_height="189dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/teks_welcome" />

        <TextView
            android:id="@+id/tvLoginDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat datang! Silakan masuk atau daftar akun untuk menggunakan aplikasi kami."
            android:textColor="#7C2941"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <!-- Tombol Masuk & Daftar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/btnMasuk"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:text="Masuk"
                android:textColor="#FFFFFF"
                android:backgroundTint="#A0243A"
                android:background="@drawable/button_primary"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btnDaftar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Daftar"
                android:textColor="#A0243A"
                android:background="@drawable/button_outline" />
        </LinearLayout>

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="234dp"
            android:layout_height="341dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:contentDescription="Logo FlowerNets"
            android:src="@drawable/logo_produk_2" />
    </LinearLayout>
</ScrollView>

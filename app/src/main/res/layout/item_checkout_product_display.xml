<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/iv_product_checkout_item"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/chinese"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/iv_product_checkout_item"
        android:layout_toStartOf="@+id/tv_product_price_total_checkout_item"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_product_name_checkout_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Produk Panjang Sekali Bisa Dua Baris"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_product_details_checkout_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail atau Kuantitas x Harga"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_product_price_total_checkout_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp100.000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>